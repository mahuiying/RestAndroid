<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#D5D5D2"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="#6F7866"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="500dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="50dip"
                android:gravity="center"
                android:text="New Customer"
                android:textColor="#DEE4CF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/contact_create"
                android:layout_width="150dp"
                android:layout_height="fill_parent"
                android:background="#6F7866"
                android:gravity="center"
                android:text="Create"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <AutoCompleteTextView
                android:id="@+id/customer_name"
                android:layout_width="315dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/text_bg"
                android:completionThreshold="1"
                android:dropDownHeight="400dp"
                android:dropDownWidth="650dp"
                android:ems="1"
                android:hint="Name"
                android:paddingLeft="10dp"
                android:textSize="20sp" />

            <AutoCompleteTextView
                android:id="@+id/customer_phone"
                android:layout_width="315dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/text_bg"
                android:completionThreshold="1"
                android:dropDownHeight="400dp"
                android:dropDownWidth="650dp"
                android:ems="1"
                android:hint="Phone Number"
                android:paddingLeft="10dp"
                android:phoneNumber="true"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="700dp"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Address:"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <EditText
                android:id="@+id/add_number"
                android:layout_width="185dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/text_bg"
                android:hint="Number"
                android:padding="10dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/add_street"
                android:layout_width="445dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/text_bg"
                android:hint="Street"
                android:padding="10dp"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <EditText
                android:id="@+id/add_apt"
                android:layout_width="185dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/text_bg"
                android:hint="Apt./Bld"
                android:padding="10dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/add_city"
                android:layout_width="185dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/text_bg"
                android:hint="City"
                android:padding="10dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/add_state"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/text_bg"
                android:hint="State"
                android:padding="10dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/add_code"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/text_bg"
                android:hint="Zip Code"
                android:padding="10dp"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="700dp"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Credit Card info:"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <EditText
                android:id="@+id/card_number"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/text_bg"
                android:hint="Card Number"
                android:padding="10dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/card_date"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/text_bg"
                android:hint="Exp.Date"
                android:padding="10dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/card_cvv"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/text_bg"
                android:hint="CVV"
                android:padding="10dp"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="Save Payment Info"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Same as username"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/fname"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/text_bg"
                android:hint="CardHolder&apos;s First Name"
                android:padding="10dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/lname"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/text_bg"
                android:hint="CardHolder&apos;s Last Name"
                android:padding="10dp"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="700dp"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Notes to be printed:"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <EditText
                android:id="@+id/be_notes"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/text_bg"
                android:gravity="left|top"
                android:padding="10dp"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="700dp"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Notes not printed:"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <EditText
                android:id="@+id/not_notes"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/text_bg"
                android:gravity="left|top"
                android:padding="10dp"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>