<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="#00000000"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="5.0dip"
    android:keepScreenOn="true" >

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scrollbars="horizontal"
             >

            <LinearLayout
                android:id="@+id/ll_main"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/ll_main_1"
                    android:layout_width="433dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bill_bg"
                    android:orientation="vertical" >

                    <ImageButton
                        android:id="@+id/close0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/login_close" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="left"
                            android:orientation="vertical"
                            android:paddingBottom="10dip" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/title"
                                    android:layout_width="120dip"
                                    android:layout_height="wrap_content"
                                    android:text="shangri-la"
                                    android:textColor="@android:color/black"
                                    android:textSize="25sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dip"
                                android:gravity="center_vertical"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="40dip"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:text="Table No.:"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/table_popNum"
                                    android:layout_width="40dip"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="T1001"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="40dip"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="40dp"
                                    android:text="People No.:"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/distance"
                                    android:layout_width="20dip"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="5"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="50dip"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:text="Series No.:"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/distance_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="201258503126"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dip"
                                android:gravity="center_vertical"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:text="Timeï¼š"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/distance_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="2015-2-28 13:55:23"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="40dp"
                                    android:text="Waiter No.:"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/waiter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="10000"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:background="#ADADAD" />

                    <include layout="@layout/pay_bill_top_filed" />

                    <ListView
                        android:id="@id/menu_list"
                        android:layout_width="fill_parent"
                        android:layout_height="350dip"
                        android:layout_weight="1.0"
                        android:cacheColorHint="#00000000"
                        android:divider="@drawable/menu_split"
                        android:footerDividersEnabled="false"
                        android:headerDividersEnabled="false"
                        android:paddingLeft="50dip"
                        android:paddingRight="50dip" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="left"
                            android:orientation="vertical"
                            android:paddingBottom="10dip" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dip"
                                android:gravity="center_vertical"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:text="Total consumptlon:"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/sum_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="$122"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />
                                
                                 <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:text="Discount:"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/discount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="1"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />
                                
                                
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dip"
                                android:gravity="center_vertical"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tax:"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tax_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="$2"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:text="Total:"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="$2"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:text="Tip:"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:hint="$0.00"
                                    android:gravity="center"
                                    android:background="@drawable/tax"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dip"
                                android:gravity="center_vertical"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:text="Money charged:"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/distance_3"
                                    android:layout_width="200dp"
                                    android:layout_height="45dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/tax"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:hint="$0"
                                    android:singleLine="true"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>
                            
                             <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dip"
                                android:gravity="center_vertical"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:text="Give change:"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/give_change"
                                    android:layout_width="wrap_content"
                                    android:layout_height="45dp"
                                    android:layout_marginLeft="10dp"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:hint="$0"
                                    android:singleLine="true"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:background="#ADADAD" />

                    <LinearLayout
                        android:layout_width="400dip"
                        android:layout_height="60.0dip"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/table_pop_cash"
                            android:layout_width="114.0dip"
                            android:layout_height="40.0dip"
                            android:background="@drawable/btn_cancel_selector"
                            android:gravity="center"
                            android:text="Cash"
                            android:textColor="@color/saddlebrown" />

                        <Button
                            android:id="@+id/table_pop_credit"
                            android:layout_width="114.0dip"
                            android:layout_height="40.0dip"
                            android:layout_marginLeft="20.0dip"
                            android:background="@drawable/btn_cancel_selector"
                            android:gravity="center"
                            android:text="Credit"
                            android:textColor="@color/saddlebrown" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="20dip" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical" >

                    <Button
                        android:id="@+id/bt_add"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_vertical|right"
                        android:background="@drawable/add" />
                </LinearLayout>
                
               
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</FrameLayout>