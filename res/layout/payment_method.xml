<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/pay_method_bg"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <ImageView
        android:id="@+id/method1"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="@drawable/pay_method1"/>
    <ImageView
        android:id="@+id/method2"
        android:layout_marginLeft="20dp"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="@drawable/pay_method2"/>
    <ImageView
        android:id="@+id/method3"
        android:layout_marginLeft="20dp"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="@drawable/pay_method3"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <ImageView
        android:id="@+id/method4"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="@drawable/pay_method4"/>
    <ImageView
        android:id="@+id/method5"
        android:layout_marginLeft="20dp"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="@drawable/pay_method5"/>
    <ImageView
        android:id="@+id/method6"
        android:layout_marginLeft="20dp"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="@drawable/pay_method6"/>
    </LinearLayout>
    

</LinearLayout>
