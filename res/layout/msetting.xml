<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/m_setting"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:keepScreenOn="true" >

    <include layout="@layout/other_top" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/m_set_title"
            android:text="@string/ip_local"
            android:textColor="@color/white"
            android:textSize="20.0sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/localip"
                android:textColor="@color/black"
                android:textSize="20.0sp" />

            <TextView
                android:id="@id/mlocalip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:singleLine="true"
                android:text="192.168.1.1"
                android:textColor="@color/black"
                android:textSize="16.0sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10.0dip"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/m_set_title"
            android:text="@string/other"
            android:textColor="@color/white"
            android:textSize="20.0sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/serverip"
                android:textColor="@color/black"
                android:textSize="20.0sp" />

            <EditText
                android:id="@id/m_iptext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/m_ip_edt"
                android:gravity="center"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="number"
                android:maxLength="3"
                android:nextFocusDown="@id/m_iptext2"
                android:numeric="integer"
                android:singleLine="true"
                android:text="104"
                android:textColor="@color/black"
                android:textSize="16.0sp" />

            <EditText
                android:id="@id/m_iptext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/m_ip_edt"
                android:gravity="center"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="number"
                android:maxLength="3"
                android:nextFocusDown="@id/m_iptext3"
                android:numeric="integer"
                android:singleLine="true"
                android:text="131"
                android:textColor="@color/black"
                android:textSize="16.0sp" />

            <EditText
                android:id="@id/m_iptext3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/m_ip_edt"
                android:gravity="center"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="number"
                android:maxLength="3"
                android:nextFocusDown="@id/m_iptext4"
                android:numeric="integer"
                android:singleLine="true"
                android:text="173"
                android:textColor="@color/black"
                android:textSize="16.0sp" />

            <EditText
                android:id="@id/m_iptext4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/m_ip_edt"
                android:gravity="center"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="number"
                android:maxLength="3"
                android:numeric="integer"
                android:singleLine="true"
                android:text="202"
                android:textColor="@color/black"
                android:textSize="16.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20.0dip"
            android:orientation="horizontal" >

            <Button
                android:id="@id/m_serversave"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip"
                android:layout_toLeftOf="@id/m_check_list_lable"
                android:background="@drawable/menu_btn_bg"
                android:focusable="false"
                android:text="Update IP"
                android:textColor="@color/white"
                android:textSize="18.0sp" />


            <Button
                android:id="@id/m_servertest"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip"
                android:layout_toLeftOf="@id/m_check_list_lable"
                android:background="@drawable/menu_btn_bg"
                android:focusable="false"
                android:text="Server Test"
                android:textColor="@color/white"
                android:textSize="18.0sp" />

            <Button
                android:id="@id/m_dateclear"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip"
                android:layout_toLeftOf="@id/m_check_list_lable"
                android:background="@drawable/menu_btn_bg"
                android:focusable="false"
                android:text="Date clear"
                android:textColor="@color/white"
                android:textSize="18.0sp" />

            <Button
                android:id="@id/m_serverupdata"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip"
                android:layout_toLeftOf="@id/m_check_list_lable"
                android:background="@drawable/menu_btn_bg"
                android:focusable="false"
                android:text="Data Reset"
                android:textColor="@color/white"
                android:textSize="18.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20.0dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/padname"
                android:textColor="@color/black"
                android:textSize="20.0sp" />

            <EditText
                android:id="@id/m_padname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/m_ip_edt"
                android:gravity="center"
                android:imeOptions="flagNoExtractUi"
                android:maxLength="7"
                android:singleLine="true"
                android:text="A001"
                android:textColor="@color/black"
                android:textSize="16.0sp" />

            <Button
                android:id="@+id/m_setpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:layout_toLeftOf="@id/m_padname"
                android:background="@drawable/menu_btn_bg"
                android:focusable="false"
                android:padding="5dip"
                android:text="Change password"
                android:textColor="@color/white"
                android:textSize="18.0sp" />
            <Button
                android:id="@+id/m_adduser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:layout_toLeftOf="@id/m_padname"
                android:background="@drawable/menu_btn_bg"
                android:focusable="false"
                android:padding="5dip"
                android:text="Adduser"
                android:textColor="@color/white"
                android:textSize="18.0sp" />
            
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10.0dip"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/m_set_title"
            android:text="@string/orderset"
            android:textColor="@color/white"
            android:textSize="20.0sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <RadioGroup
                android:id="@+id/radiogroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="3.0px"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40.0dip"
                    android:checked="true"
                    android:text="Graphical order"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.0dip"
                    android:text="List order"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.0dip"
                    android:text="Code order"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.0dip"
                    android:text="Fast order"
                    android:textColor="@color/black" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/radiogroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="3.0px"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radioButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40.0dip"
                    android:text="Custom"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/radioButton6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.0dip"
                    android:checked="true"
                    android:text="Waiter"
                    android:textColor="@color/black" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10.0dip"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/m_set_title"
            android:text="Printer/Cashier"
            android:textColor="@color/white"
            android:textSize="20.0sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <CheckBox
                android:id="@+id/cb_printer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40.0dip"
                android:checked="true"
                android:text="Printer/Cashier1"
                android:textColor="@color/black" />

            <CheckBox
                android:id="@+id/cb_printer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:text="Printer/Cashier2"
                android:textColor="@color/black" />

            <CheckBox
                android:id="@+id/cb_printer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:text="Printer/Cashier3"
                android:textColor="@color/black" />

            <CheckBox
                android:id="@+id/cb_printer4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:text="Printer/Cashier4"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40.0dip"
        android:gravity="center" >

        <Button
            android:id="@+id/set_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/menu_btn_bg"
            android:focusable="false"
            android:text="save"
            android:textColor="@color/white"
            android:textSize="18.0sp" />
    </LinearLayout>

    <include layout="@layout/other_bottom" />

</LinearLayout>