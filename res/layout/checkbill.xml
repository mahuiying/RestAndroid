<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:keepScreenOn="true"
    android:orientation="vertical" >

    <include layout="@layout/ordersmg_top" />

    <include layout="@layout/checkbill_top_field" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_split" />

    <ListView
        android:id="@id/mCheckList_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="#00000000"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/menu_split"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false" />

    <include layout="@layout/ordersmg_bottom" />

</LinearLayout>