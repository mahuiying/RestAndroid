<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="980dp"
    android:layout_height="70dp"
    android:background="#ffffff"
    android:descendantFocusability="blocksDescendants" 
    android:orientation="vertical">

    <LinearLayout 
    android:layout_width="980dp"
    android:layout_height="50dp"
    android:descendantFocusability="blocksDescendants" >
    
    <RelativeLayout
        android:layout_width="140dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/menu_name"
            style="@style/contentText"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:textColor="#000" />
    </RelativeLayout>

     <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@id/menu_price"
            style="@style/contentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#000" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="147dp"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/menu_qty"
            style="@style/contentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="5.0dip"
            android:textColor="#000"
            android:textSize="20.0sp" />

        <Button
            android:id="@+id/qty_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/menu_qty"
            android:layout_alignBottom="@+id/menu_qty"
            android:layout_toRightOf="@+id/menu_qty"
            android:background="@drawable/qty_add"
            android:padding="5.0dip" />

        <Button
            android:id="@+id/qty_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/menu_qty"
            android:layout_alignBaseline="@+id/menu_qty"
            android:layout_toLeftOf="@+id/menu_qty"
            android:background="@drawable/qty_sub"
            android:padding="5.0dip" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/subtotal"
            style="@style/contentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#000" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/menu_status"
            style="@style/contentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#000" />
    </RelativeLayout>

   
    </LinearLayout>
    <TextView 
        android:id="@+id/order_note"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="18sp"
            android:layout_marginLeft="20dip"
        />
</LinearLayout>