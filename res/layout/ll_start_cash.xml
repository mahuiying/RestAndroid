<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_start_cash"
                android:layout_width="1000dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="50dp"
                android:orientation="vertical"
                android:visibility="gone"
                >

    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:background="@drawable/pop_call_splite" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:text="Staring Cash"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/start_cash_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="30dp"
            android:background="#636363"
            android:digits="0123456789."
            android:ems="10"
            android:hint="Enter Staring Cash Amount"
            android:textSize="25sp" >

        </EditText>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/pop_call_splite" />

    <Button
        android:id="@+id/start_drawer"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/start_drawer_bg"
        android:text="Start Drawer"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />
 <!-- android:background="@drawable/switch_draw" -->
</LinearLayout>